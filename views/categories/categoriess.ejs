<% layout('layout/boilerplate.ejs') %>

    <h1 class="pb-4">Explore Categories</h1>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/categories">Categories</a></li>
            <li class="breadcrumb-item active" aria-current="page">Explore Categories</li>
        </ol>
    </nav>
    <% if(typeof categories !=='undefined' && categories.length> 0) { %>
    <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3 mt-4">

            <% categories.forEach(function(category, index) { %>
                <a href="/recipes/categories/<%- category.name %>" class="col text-center category__link">
                    <div class="category__img shadow">
                        <img src="<%= category.image%>" alt="<%- category.name %>" loading="lazy">
                    </div>
                    <div class="pt-1">
                        <%- category.name %>
                    </div>
                </a>
                <% }) %>
                    
    </div>
    <% } %>


    <% if(typeof categoryById !=='undefined' && categoryById.length> 0) { %>
        <div class="row row-cols-2 row-cols-lg-4 g-2 g-lg-3 mt-4">
            <% categoryById.forEach(function(recipe, index){ %>

                <a href="/recipes/<%= recipe._id %>" class="col text-center category__link mb-3">
                    <div class="category__img category__img--large shadow">
                        <img src="<%= recipe.images[1].url %>" alt="<%= recipe.name %>" loading="lazy">
                    </div>
                    <div class="pt-1">
                        <%= recipe.name %>
                    </div>
                </a>


                <% }) %>
        
                   </div>
                   <% } %>